<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Salesperson: Own Documents Only -->
        <record id="rule_student_personal" model="ir.rule">
            <field name="name">Personal Student Orders</field>
            <field name="model_id" ref="model_student_student"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        </record>

        <!-- Salesperson: All Documents & Manager -->
        <record id="rule_student_all" model="ir.rule">
            <field name="name">All Student Orders</field>
            <field name="model_id" ref="model_student_student"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_all_leads')), (4, ref('sales_team.group_sale_manager'))]"/>
        </record>
    </data>
</odoo>
