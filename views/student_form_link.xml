<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
   <record id="student_details_link_wizard" model="ir.ui.view">
       <field name="name">student.details.link.view.form</field>
       <field name="model">student.details.link</field>
       <field name="priority" eval="8"/>
       <field name="arch" type="xml">
           <form string="Student Details Link">
               <group>
                   <field name="student_id" invisible="1"/>
                   <field name="link" widget="url" readonly="1"/>
               </group>

               <footer>
<!--                   <button name="action_send_message" string="Send" type="object"/>-->
                   <button name="cancel" string="Cancel" special="cancel"/>
               </footer>
           </form>
       </field>
   </record>
</odoo>
