<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_student_branch_tree" model="ir.ui.view">
        <field name="name">student.branch.tree</field>
        <field name="model">student.branch</field>
        <field name="arch" type="xml">
            <tree>
                <field name="create_date" string="Added Date"/>
                <field name="name"/>
                <field name="code"/>
                <field name="manager_id"/>
<!--                <field name="active"/>-->
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_student_branch_form" model="ir.ui.view">
        <field name="name">student.branch.form</field>
        <field name="model">student.branch</field>
        <field name="arch" type="xml">
            <form string="Student Branch">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="manager_id"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_student_branch" model="ir.actions.act_window">
        <field name="name">Branches</field>
        <field name="res_model">student.branch</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_student_branch" name="Branches"
              parent="menu_student_root"
              action="action_student_branch"/>
</odoo>
